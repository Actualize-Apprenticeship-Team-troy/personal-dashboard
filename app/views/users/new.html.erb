<%= form_for(:user, :url => {:controller => "users", :action => "create"}) do |f| %>

  <div class="container">
    <h1>Sign Up</h1>
    <p>Please fill in this form to create an account.</p>
    <hr>

      <%= f.label :username %>:
      <%= f.text_field :username, placeholder: "Enter Username" %><br />

      <%= f.label :email %>:
      <%= f.text_field :email, placeholder: "Enter Email" %><br />

      <%= f.label :password %>:
      <%= f.text_field :password, placeholder: "Enter Password" %><br />

      <%= f.label :password_confirmation %>:
      <%= f.text_field :password_confirmation, placeholder: "Password Confirmation" %><br />

      <div class="clearfix">
        <%= f.submit 'Sign Up', :class => "signupbtn" %>
      </div>
  </div>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li class="alert alert-warning"><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<% end %>

